     <div class="col-md-3 sidebar_box">
       <div class="sidebar">
      <div class="menu_box">
        <h3 class="menu_head">Cat√©gories</h3>
        <ul class="menu">
          {% render(controller('EcommerceBundle:categorie:index')) %}
        </ul>
      </div>
   
