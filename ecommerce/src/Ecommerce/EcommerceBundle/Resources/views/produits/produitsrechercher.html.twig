      </div>
      <div class="clients">
      
      </div>
     </div> 
     

     <div class="col-md-9 content_right">
      <div class="top_grid1">
       
           {% if produit|length != 0 %}
           {% for produit in produit %}
       <div class="col-md-4 box_2">
        <div class="grid_1"><a href="{{ path('gestionproduits_show', { 'id': produit.id }) }}">
          <div class="b-link-stroke b-animate-go  thickbox">
            <img src="{{ asset('upload/bundles/images/' ~ produit.media.Image) }}" width='300' height='150' class="img-responsive" alt=""/></div>
           <div class="grid_2">
            <p><a href="{{ path('gestionproduits_show', { 'id': produit.id }) }}">{{ produit.nom }}</a></p>
            <ul class="grid_2-bottom">
          {% if produit.prixpromotion == 0 %}
          <p>{{ produit.prixHt|tva(produit.tva.multiplicate) }} DH</p>
         {%endif%}
         {% if produit.prixpromotion != 0 %}
          <p>{{ produit.prixpromotion|tva(produit.tva.multiplicate) }} DH</p>
         {%endif%}
                                
                                <a class="btn btn-primary" href="{{  path('gestionproduits_show', { 'id': produit.id }) }}">infos</a>
                                {% if panier[produit.id] is not defined %}
                                    <a class="btn btn-success" width='100' height='100' href="{{ path('ajouterpanier', { 'id': produit.id }) }}">Acheter</a>
                                {% endif %}
                            
            </ul>

           </div>
        </div>
       </a></div>
        {% endfor %}
       {% else %}
                Aucun produit
            {% endif %}
      
       <div class="clearfix"> </div>
      </div> 
       </div>
    </div>        
  </div>
</div>
