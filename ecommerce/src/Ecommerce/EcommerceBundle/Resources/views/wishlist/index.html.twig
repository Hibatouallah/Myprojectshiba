
{% include 'EcommerceBundle:Default:/index.html.twig' %}
 
    <div class="container">
    <div class="row">
        <div class="span9">
               
            <h2>Ma wishlist</h2>
            
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>date</th>
                            <th>produit</th>
                            <th>Quantite</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                     {% for entity in entity %}

                     <form action="{{ path('ajouterpanier', { 'id' : entity.produit.id }) }}" method="GET">
                        <tr>
                                    <td>{{ entity.date|date("m/d/Y")}}</td>
                                    <td>{{ entity.produit.nom }}</td>
                                     <td><select name="qte" class="span1">
                                        {% for i in 1..10 %}
                                            <option value="{{ i }}">{{ i }}</option>
                                        {% endfor %}
                                      </select></td>
                                <td>
                                 <a href="{{ path('wishlist_delete', { 'id' : entity.id }) }}" class="btn btn-success pull-left">Supprimer</a>
                                 <button class="btn btn-success pull-left">Ajouter au panier</button>
                                 </td>
                         
                        </tr>
                          </form>
                    {% endfor %}
              </table>
           
            
            <a href="{{ path('homepage')}}" class="btn btn-primary">Continuer mes achats</a>
        </div>
    </div>
</div>
