            <form>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Téléphone</th>
                            <th>Adresse</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                       {% if user.adresses|length == 0 %}
                        <tr>
                            <td colspan="4"><center>Aucune adresses dans votre compte</center></td>
                        </tr>
                       {% endif %}
                    {% for entity in user.adresses %}
                        <tr>
                           
                                <td>{{ entity.nom }}</td>
                                <td>{{ entity.prenom }} </td>
                                <td>{{ entity.telephone }} </td>
                                <td>{{ entity.adresse }}</td>
                                
                                <td>
                                 <a href="{{ path('modifieradresse', { 'id': entity.id }) }}" class="btn btn-success pull-left">Modifier</a>
                                 <a href="{{ path('supprimeradresse', { 'id' : entity.id }) }}" class="btn btn-success pull-left">Spprimer</a>
                                 </td>
                             </tr>     
                        {% endfor %}
                    </tbody>
                </table>
            </form>
        </div>
                
